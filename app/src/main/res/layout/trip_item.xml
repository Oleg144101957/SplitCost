<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:id="@+id/tripLayout"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/purple_500"
    app:cardUseCompatPadding="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/tripAvatarImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/paidBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tripAvatarImage"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/tripAvatarImage"
            android:alpha="0.7"
            android:text="Ivan, Oleg, Denis, Dima"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tripName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/paidBy"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="33dp"
            android:layout_toEndOf="@+id/tripAvatarImage"
            android:alpha="0.9"
            android:text="MCDonalds 125$"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>