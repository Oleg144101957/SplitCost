<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:src="@mipmap/ic_launcher" />
<!--            app:srcCompat="@tools:sample/avatars" />-->

        <TextView
            android:id="@+id/paidBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatarImage"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/avatarImage"
            android:text="Paid by Blagoveshenskiy Ivan"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            android:alpha="0.7"
            />

        <TextView
            android:id="@+id/dateCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/description_cost"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/avatarImage"
            android:alpha="0.7"
            android:text="Date: 24.10.2022 12:35"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/description_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/paidBy"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/avatarImage"
            android:alpha="0.9"
            android:text="MCDonalds 125$"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>


